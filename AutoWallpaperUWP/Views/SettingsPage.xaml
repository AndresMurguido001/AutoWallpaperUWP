<Page
    x:Class="AutoWallpaperUWP.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutoWallpaperUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20">
        <TextBox 
            Margin="0, 0, 0, 20"
            HorizontalAlignment="Left"
            x:Name="unsplashKey" 
            Header="Unsplash Api Key" 
            MaxWidth="750" Width="500"/>
        <TimePicker 
            Margin="0, 0, 0, 20"
            x:Name="wallpaperChangeTime"
            Header="Wallpaper Change Time (Default: 9AM)" />
        <Button 
            x:Name="updateCredentials" 
            Content="Save Changes" 
            Margin="0, 20, 0, 0" 
            Click="updateCredentials_Click" />
    </StackPanel>
</Page>
